{
  "manifest_version": 2,
  "name": "IPFS Extension",
  "version": "0.0.1",

  "background": {
    "page": "index.html",
    "persistent": true
  },
//  "content_scripts": [
//    {
//      "matches": ["http://localhost:*/ipfs/*", "http://localhost:*/ipns/*"],
//      "js": ["content_script.js"]
//    }
//  ],
  "icons": {
    "16": "ic_content_copy_black_18dp.png"
  },
  "page_action": {
    "default_icon": {
      "19": "ic_content_copy_black_18dp.png",
      "38": "ic_content_copy_black_36dp.png"
    },
    "default_title": "Copy IPFS hash link"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "declarativeContent",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://gateway.ipfs.io/ipfs/*",
    "http://gateway.ipfs.io/ipns/*",
    "http://localhost:*/ipfs/*",
    "http://localhost:*/ipns/*"
  ]
}
