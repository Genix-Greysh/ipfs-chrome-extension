{
  "manifest_version": 2,
  "name": "IPFS Gateway Redirect",
  "version": "0.1.0",

  "background": {
    "page": "index.html",
    "persistent": true
  },
  "icons": {
    "16": "ipfs-logo-128-white.png"
  },
  "page_action": {
    "default_icon": {
      "19": "ipfs-logo-128-white.png",
      "38": "ipfs-logo-128-white.png"
    },
    "default_title": "Copy as IPFS link"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "declarativeContent",
    "webRequest",
    "webRequestBlocking",
    "http://gateway.ipfs.io/ipfs/*",
    "http://gateway.ipfs.io/ipns/*",
    "http://localhost:*/ipfs/*",
    "http://localhost:*/ipns/*"
  ]
}
